{{ form_start(form) }}
<div class="row">
    <div class="col-md-8 mb-3">
        {{ form_label(form.name, 'Название', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Введите название продукта'}}) }}
        <div class="form-text text-danger">{{ form_errors(form.name) }}</div>
    </div>

    <div class="col-md-4 mb-3">
        {{ form_label(form.price, 'Цена', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
        <div class="input-group">
            {{ form_widget(form.price, {'attr': {'class': 'form-control text-end', 'placeholder': '0.00'}}) }}
            <span class="input-group-text">₽</span>
        </div>
        <div class="form-text text-danger">{{ form_errors(form.price) }}</div>
    </div>

    <div class="col-12 mb-3">
        {{ form_label(form.sku, 'Артикул (SKU)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
        {{ form_widget(form.sku, {'attr': {'class': 'form-control', 'placeholder': 'Артикул или код товара'}}) }}
        <div class="form-text text-danger">{{ form_errors(form.sku) }}</div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">{{ button_label|default('Сохранить') }}</button>
    <a href="{{ path('app_product_index') }}" class="btn btn-secondary ms-2">Отмена</a>
</div>

{{ form_end(form) }}
