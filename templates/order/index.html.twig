{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3">Orders</h1>
            <a href="{{ path('app_order_new') }}" class="btn btn-primary">+ Create order</a>
        </div>

        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>UserId</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.userId }}</td>
                    <td class="text-end">
                        <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-outline-secondary me-1">Show</a>
                        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        {{ include('order/_delete_form.html.twig', {'order': order}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
