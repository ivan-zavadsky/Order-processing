{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3">Orders</h1>
            <a href="{{ path('app_order_new') }}" class="btn btn-primary">+ Create order</a>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="#" class="btn btn-danger" data-action="delete-selected">- Delete selected</a>

        </div>

        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>
                        <label for="check-all"></label>
                        <input type="checkbox" id="check-all" data-action="check-all">
                    </th>
                    <th>Id</th>
                    <th>Status</th>
{#                    <th>UserId</th>#}

                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>
                        <label>
                            <input type="checkbox" name="ids[]" value="{{ order.id }}">
                        </label>
                    </td>
                    <td>{{ order.id }}</td>
{#                    <td>{{ order.userId }}</td>#}
                    <td>{{ order.status.value }}</td>
                    {{ include(
                        'order/action_buttons.html.twig',
                        {'order': order}
                    )}}
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        no records found
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
