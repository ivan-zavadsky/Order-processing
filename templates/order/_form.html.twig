{{ form_start(form) }}
<div class="row">
    <div class="col-md-6 mb-3">
        <label
            class="form-label fw-semibold required"
            for="order_userId"
        >
            Пользователь (ID)
        </label>
        {{ form_widget(
            form.userId,
            {'attr':
                {
                    'class': 'form-control',
                    'placeholder': 'Введите ID пользователя'
                }
            }
        ) }}
        <div class="form-text text-danger">
            {{ form_errors(form.userId) }}
        </div>
    </div>
</div>



<div class="mt-3">
    <button type="submit" class="btn btn-sm btn-primary">
        Сохранить
    </button>
    <a href="{{ path('app_order_index') }}" class="btn btn-sm btn-secondary ms-2">
        Отмена
    </a>
</div>

{{ form_end(form) }}
