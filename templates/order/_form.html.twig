<table class="table table-bordered" data-controller="order-items">
    <thead>
    <tr>
        <th class="col-md">Продукт</th>
        <th class="col-sm">Кол-во</th>
{#        <th width="150">Цена</th>#}
        <th class="col-sm">Действие</th>
    </tr>
    </thead>
    <tbody data-order-items-target="list">
    {{ form_start(form) }}

    {% for item in form.items %}
        <tr>
            <td>{{ form_widget(item.product) }}</td>
            <td>{{ form_widget(item.quantity) }}</td>
{#            <td></td>#}
{#            <td>{{ form_widget(item.price) }}</td>#}
            <td>
                <button type="button" class="btn btn-sm btn-danger"
                        data-action="order-items#remove">×</button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="mt-3">
    <button type="button"
            class="btn btn-sm btn-primary"
            data-action="order-items#add"
    >
        + Добавить позицию
    </button>
</div>
{{ form_end(form) }}
